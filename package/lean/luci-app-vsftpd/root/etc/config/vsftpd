
config vsftpd 'general'
	option enable6 '1'
	option port '21'
	option dataport '20'

config vsftpd 'local'
	option local_enable '1'
	option write '0'
	option download '1'
	option root '/mnt'
	option umask '022'
	option mode '0755'

config vsftpd 'anonymous'
	option anonymous_enable '1'
	option readable '1'
	option upload '1'
	option writemkdir '1'
	option others '1'
	option nopassword '1'
	option umask '022'
	option root '/var/ftp'
	option username 'ftp'
